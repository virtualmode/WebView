@namespace WebView
@using Microsoft.AspNetCore.Components.Forms
@inherits ValidationSummary

@{ var validationMessages = Model is null ? CustomEditContext.GetValidationMessages() : CustomEditContext.GetValidationMessages(new FieldIdentifier(Model, string.Empty));

    @if (validationMessages.Count() > 0)
    {
        <div @attributes="AdditionalAttributes"
             class="validation-errors">

            @foreach (var error in validationMessages)
            {
                <MessageBar MessageBarType="MessageBarType.Error" IsMultiline="false">
                    <span class="validation-message">@error</span>

                </MessageBar>
            }
        </div>
    }
}

@code {
    [CascadingParameter] EditContext CustomEditContext { get; set; } = default!;
}
